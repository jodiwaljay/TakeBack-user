<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_height="wrap_content">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:textColor="@color/colorAccent"
        android:inputType="textCapWords"
        android:hint="@string/company_details_namehint"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/description"
        android:textColor="@color/colorAccent"
        android:inputType="textCapSentences"
        android:hint="@string/company_details_deschint"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phone"
        android:textColor="@color/colorAccent"
        android:inputType="phone"
        android:hint="@string/company_details_phonehint"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:textColor="@color/colorAccent"
        android:id="@+id/fax"
        android:hint="@string/company_details_faxhint"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:textColor="@color/colorAccent"
        android:id="@+id/email"
        android:hint="@string/company_details_emailhint"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/address"
        android:textColor="@color/colorAccent"
        android:inputType="textCapSentences"
        android:hint="@string/company_details_addhint"/>

    </LinearLayout>


    <Button
        android:id="@+id/bSubmit"
        android:layout_marginTop="20dp"
        android:text="Create Company"
        android:layout_gravity="center_horizontal"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:paddingLeft="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingRight="20dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/buttonshape"
        android:textAllCaps="false" />

</LinearLayout>
</ScrollView>
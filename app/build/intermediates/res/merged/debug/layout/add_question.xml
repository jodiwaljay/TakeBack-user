<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e4e4e4"
    android:fitsSystemWindows="true"
    tools:context="com.elegance.feedback.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">


    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/questionAddlayout">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="100"
            android:maxLines="3"
            android:gravity="center_horizontal"
            android:maxWidth="500dp"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"
            android:textSize="22sp"
            android:inputType="textCapSentences"
            android:id="@+id/etQuestion"
            android:hint="@string/question_hint"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:id="@+id/addQRadioBut"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:hint="Option 1"
                    android:textColorHint="@color/colorAccent"
                    android:textSize="20sp"
                    android:onClick="buttonClicked"
                    android:id="@+id/radio1"
                    android:layout_weight="0.5"/>
                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/radio2"
                    android:enabled="true"
                    android:hint="Option 2"
                    android:textSize="20sp"
                    android:onClick="buttonClicked"
                    android:layout_weight="0.5"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:hint="Option 3"
                    android:textSize="20sp"
                    android:id="@+id/radio3"
                    android:onClick="buttonClicked"
                    android:layout_weight="0.5"/>
                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:hint="Option 4"
                    android:textSize="20sp"
                    android:id="@+id/radio4"
                    android:onClick="buttonClicked"
                    android:layout_weight="0.5"/>
            </LinearLayout>
        </RadioGroup>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/addQCheck1"
                android:layout_marginTop="20dp"
                android:weightSum="1">
                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:hint="Option 1"
                    android:textSize="20sp"
                    android:id="@+id/check1"
                    android:onClick="buttonClicked"
                    android:layout_weight="0.5"/>
                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:hint="Option 2"
                    android:textSize="20sp"
                    android:id="@+id/check2"
                    android:onClick="buttonClicked"
                    android:layout_weight="0.5"/>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/addQCheck2"
            android:weightSum="1">
            <CheckBox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:hint="Option 3"
                android:textSize="20sp"
                android:id="@+id/check3"
                android:onClick="buttonClicked"
                android:layout_weight="0.5"/>
            <CheckBox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:hint="Option 4"
                android:textSize="20sp"
                android:id="@+id/check4"
                android:onClick="buttonClicked"
                android:layout_weight="0.5"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/ratPrev"
            android:layout_margin="12dp"
            android:background="@drawable/layout_corner">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:maxWidth="400dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:text="How would you rate the event on a five star scale ?"
                android:gravity="center_horizontal"
                android:textSize="25sp"
                android:minHeight="100dp"
                android:textColor="@color/questionColor"/>

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rating="0"
                android:isIndicator="false"
                android:stepSize="1"
                android:id="@+id/ratingBar"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:numStars="5"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/singleChoicePrev"
            android:layout_margin="12dp"
            android:background="@drawable/layout_corner">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:maxWidth="400dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:text="How would you rate the event on a five star scale ?"
                android:gravity="center_horizontal"
                android:textSize="25sp"
                android:minHeight="100dp"
                android:textColor="@color/questionColor"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:layout_gravity="center_horizontal"
                android:minWidth="400dp"
                android:weightSum="1"
                android:orientation="horizontal"
                android:paddingRight="10dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.5"
                    android:weightSum="1">
                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="true"
                        android:hint="Option 1"
                        android:layout_weight="0.5"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:enabled="true"
                        android:hint="Option 2"
                        android:layout_weight="0.5"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.5"
                    android:gravity="end"
                    android:weightSum="1">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:enabled="true"
                        android:hint="Option 3"
                        android:layout_weight="0.5"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:enabled="true"
                        android:hint="Option 4"
                        android:layout_weight="0.5"/>
                </LinearLayout>
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:elevation="7dp"
            android:id="@+id/smileyPrev"
            android:background="@drawable/layout_corner"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:maxWidth="400dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:text="How would you rate the event on a five star scale ?"
                android:gravity="center_horizontal"
                android:textSize="25sp"
                android:minHeight="100dp"
                android:textColor="@color/questionColor"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:minWidth="350dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="10dp"
                android:weightSum="1">

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:scaleType="fitCenter"
                    android:src="@drawable/excellent"
                    android:id="@+id/bExcellent"
                    style="?attr/buttonBarButtonStyle"
                    android:background="#00000000"
                    android:textAllCaps="false"/>

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:scaleType="fitCenter"
                    android:src="@drawable/good"
                    android:id="@+id/bGood"
                    style="?attr/buttonBarButtonStyle"
                    android:background="#00000000"
                    android:textAllCaps="false"/>
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:scaleType="fitCenter"
                    android:src="@drawable/average"
                    android:id="@+id/bAverage"
                    style="?attr/buttonBarButtonStyle"
                    android:background="#00000000"
                    android:textAllCaps="false"/>

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:scaleType="fitCenter"
                    android:src="@drawable/poor"
                    android:id="@+id/bPoor"
                    style="?attr/buttonBarButtonStyle"
                    android:background="#00000000"
                    android:textAllCaps="false"/>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="12dp"
            android:id="@+id/dichotPrev"
            android:background="@drawable/layout_corner">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:maxWidth="400dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:text="How would you rate the event on a five star scale ?"
                android:gravity="center_horizontal"
                android:textSize="25sp"
                android:minHeight="100dp"
                android:textColor="@color/questionColor"/>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:text="Yes"
                    android:layout_marginRight="40dp"
                    android:layout_marginEnd="40dp"
                    android:textSize="30sp"
                    android:id="@+id/bYes"
                    android:checked="false"
                    android:layout_gravity="center_horizontal"
                    />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:text="No"
                    android:layout_marginLeft="40dp"
                    android:layout_marginStart="40dp"
                    android:textSize="30sp"
                    android:id="@+id/bNo"
                    android:checked="false"
                    android:layout_gravity="center_horizontal"
                    />

            </RadioGroup>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/checklistPrev"
            android:layout_margin="12dp"
            android:background="@drawable/layout_corner">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:maxWidth="400dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:text="How would you rate the event on a five star scale ?"
                android:gravity="center_horizontal"
                android:textSize="25sp"
                android:minHeight="100dp"
                android:textColor="@color/questionColor"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:hint="Option 1"
                    android:onClick="buttonClicked"
                    android:layout_weight="0.5"/>
                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:hint="Option 2"
                    android:onClick="buttonClicked"
                    android:layout_weight="0.5"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:hint="Option 3"
                    android:onClick="buttonClicked"
                    android:layout_weight="0.5"/>
                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:hint="Option 4"
                    android:onClick="buttonClicked"
                    android:layout_weight="0.5"/>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textAllCaps="false"
            android:id="@+id/btAddQuestion"/>

    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>